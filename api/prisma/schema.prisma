model Coin {
  id             Int     @id @default(autoincrement())
  coinIdentifier String  @unique
  name           String  @unique
  mintAddress    String  @unique
  prices         Price[]
}

model Price {
  id       Int      @id @default(autoincrement())
  coinName String
  coin     Coin     @relation(fields: [coinName], references: [name])
  price    Float
  date     DateTime

  @@unique([coinName, date])
}
